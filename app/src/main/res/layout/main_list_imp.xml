<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="#fff">

    <ImageView
        android:id="@+id/main_lv_icon"
        android:layout_width="60dp"
        android:layout_height="60dp" />


    <Switch
        android:id="@+id/main_lv_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:checked="false"/>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/main_lv_icon"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/main_lv_switch"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">

        <TextView
            android:id="@+id/main_lv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="Title"
             />

        <TextView
            android:id="@+id/main_lv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="Content"
            android:layout_below="@id/main_lv_title"
            android:layout_marginTop="8dp"/>

    </RelativeLayout>

</RelativeLayout>