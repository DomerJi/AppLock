<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#efefef">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/pas_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@android:drawable/ic_menu_close_clear_cancel"/>

        <TextView
            android:id="@+id/pas_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_centerInParent="true"
            android:text="输入密码"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ccc"
            android:layout_below="@id/pas_clear"/>

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/pas_et_group"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_margin="32dp"

        android:background="@drawable/gray_border">

        <EditText
            android:id="@+id/pas_et_1"
            style="@style/pas_edittext"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:focusable="false"/>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#ccc"/>

        <EditText
            android:id="@+id/pas_et_2"
            style="@style/pas_edittext"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:focusable="false"/>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#ccc"/>

        <EditText
            android:id="@+id/pas_et_3"
            style="@style/pas_edittext"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:focusable="false"/>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#ccc"/>

        <EditText
            android:id="@+id/pas_et_4"
            style="@style/pas_edittext"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:focusable="false"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/pas_anim"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_margin="32dp">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminateDrawable="@anim/progressbar_refresh"
            android:indeterminateDuration="1000"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pas_number_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/wihte_gray_sel"
            android:text="1"
            android:textColor="#000"
            android:gravity="center"
            android:textSize="30sp"
            android:padding="16dp"/>

        <TextView
            android:id="@+id/pas_number_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/wihte_gray_sel"
            android:textColor="#000"
            android:text="2"
            android:layout_marginLeft="-1px"
            android:gravity="center"
            android:textSize="30sp"
            android:padding="16dp"/>

        <TextView
            android:id="@+id/pas_number_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/wihte_gray_sel"
            android:textColor="#000"
            android:text="3"
            android:layout_marginLeft="-1px"
            android:gravity="center"
            android:textSize="30sp"
            android:padding="16dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="68dp"
        android:layout_marginTop="-1px">

        <TextView
            android:id="@+id/pas_number_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/wihte_gray_sel"
            android:textColor="#000"
            android:text="4"
            android:gravity="center"
            android:textSize="30sp"
            android:padding="16dp"/>

        <TextView
            android:id="@+id/pas_number_5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/wihte_gray_sel"
            android:textColor="#000"
            android:text="5"
            android:layout_marginLeft="-1px"
            android:gravity="center"
            android:textSize="30sp"
            android:padding="16dp"/>

        <TextView
            android:id="@+id/pas_number_6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="-1px"
            android:background="@drawable/wihte_gray_sel"
            android:textColor="#000"
            android:text="6"
            android:gravity="center"
            android:textSize="30sp"
            android:padding="16dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="68dp"
        android:layout_marginTop="-1px">

        <TextView
            android:id="@+id/pas_number_7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/wihte_gray_sel"
            android:textColor="#000"
            android:text="7"
            android:gravity="center"
            android:textSize="30sp"
            android:padding="16dp"/>

        <TextView
            android:id="@+id/pas_number_8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="-1px"
            android:background="@drawable/wihte_gray_sel"
            android:text="8"
            android:textColor="#000"
            android:gravity="center"
            android:textSize="30sp"
            android:padding="16dp"/>

        <TextView
            android:id="@+id/pas_number_9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/wihte_gray_sel"
            android:textColor="#000"
            android:text="9"
            android:layout_marginLeft="-1px"
            android:gravity="center"
            android:textSize="30sp"
            android:padding="16dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:orientation="horizontal"
        android:layout_marginTop="-1px">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#eee"
            android:textColor="#000"
            android:gravity="center"
            android:textSize="30sp"
            android:padding="16dp"/>

        <TextView
            android:id="@+id/pas_number_0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="-1px"
            android:layout_marginRight="-1px"
            android:background="@drawable/wihte_gray_sel"
            android:text="0"
            android:textColor="#000"
            android:gravity="center"
            android:textSize="30sp"
            android:padding="16dp"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/pas_number_back"
            android:background="#eee">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/clear_back"/>

        </RelativeLayout>



    </LinearLayout>


</LinearLayout>